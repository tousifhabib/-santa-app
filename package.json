{
  "//1": "describes your app and its dependencies",
  "//2": "https://docs.npmjs.com/files/package.json",
  "//3": "updating this file will download and update your packages",
  "name": "santa-app",
  "version": "0.0.1",
  "description": "A simple Node app built on Express, instantly up and running.",
  "main": "src/server.ts",
  "scripts": {
    "compile": "tsc",
    "postcompile": "cp -r views dist/",
    "start": "npm run build && npm run compile && node -r dotenv/config dist/server.js",
    "start:dev": "npm run dev && tsc -w & ts-node-dev -r dotenv/config src/server.ts",
    "build": "webpack --mode production",
    "dev": "webpack --mode development",
    "lint": "eslint '*/**/*.{js,ts}'",
    "lint:fix": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "test": "jest"
  },
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.194",
    "@types/morgan": "^1.9.4",
    "@types/nodemailer": "^6.4.7",
    "@types/winston": "^2.4.4",
    "axios": "^1.4.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.6.0",
    "express": "^4.16.4",
    "lodash": "^4.17.21",
    "morgan": "^1.9.1",
    "nodemailer": "^6.9.2",
    "request": "^2.88.0",
    "ts-loader": "^9.4.2",
    "winston": "^3.8.2"
  },
  "engines": {
    "node": "16.x"
  },
  "repository": {
    "url": "https://github.com/alj-devops/santa-app"
  },
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@types/chai": "^4.3.5",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.5",
    "@types/sinon": "^10.0.15",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "babel-loader": "^9.1.2",
    "chai": "^4.3.7",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "sinon": "^15.0.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1"
  }
}
